    "@remotion/google-fonts": "^4.0.286",
    "@remotion/install-whisper-cpp": "^4.0.286",
    "@remotion/renderer": "^4.0.286",
    "@remotion/zod-types": "^4.0.286",
    "content-type": "^1.0.5",
    "cuid": "^3.0.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "kokoro-js": "^1.2.0",
    "nock": "^14.0.3",
    "pino": "^9.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
